@import 'jeet'
@import '_settings'

normalize-css()
base()

body
  background-color $black
  color $white
  font-family $font
  font-weight 300

  &.adminbar-showing
    .wrapper
      header
        top 32px

      main
        top ($menubar_height + 32px)

  h1, h1, h3, h4, h5, h6
    font-weight 700

  a
    color $gray

  .wrapper
    position relative
    center($maxwidth)

    header
      center($maxwidth)
      span(12/12)
      fixed()
      background-color $black
      top 0
      z-index 100

      h1
        display none

      .mobile-menu
        display none

        +mobile()
          display block
          cursor pointer
          span(1/12)

        .fa-bars
          display block
          text-align center
          line-height $menubar_height

      .payoff
        +desktop()
          display block
          span(4/12)

        +tablet()
          display none

        +mobile()
          display block
          span(11/12)

        .inner
          font-size 1em
          line-height $menubar_height
          font-weight 700
          text-align right
          padding 0 1em

          +mobile()
            text-align left
            font-size .8em
            text-shadow 2px 2px rgba(0, 0, 0, .25);

      nav
        +desktop()
          span(8/12)
        +mobile()
          display none
          position absolute
          top $menubar_height
          background-color $black
          width 100%

        +tablet()
          span(12/12)
        line-height $menubar_height
        font-size .7em

        ul
          list-style none
          padding 0
          margin 0

          li
            padding 0
            margin 0
            float left
            +mobile()
              float none
              text-align center

            a
              text-decoration none
              text-transform uppercase
              font-weight bold
              display block
              padding 0 .5em
              border-right 1px solid $gray
              position relative

              &:before
                content ""
                width 100%
                height 2px
                position absolute
                left 0
                bottom 2px
                background-color $white
                visibility hidden
                transform scaleX(0)
                transition all 0.6s ease-in-out 0s

              &:hover, &.active
                transition all 1s ease-in-out 0s
                color $white

                &:before
                  visibility visible
                  -webkit-transform scaleX(1)
                  transform scaleX(1)

              +mobile()
                border-right 0
                border-bottom 1px solid $gray

            &:last-child a
              border-right none

            +mobile()
              &:first-child a
                border-top 1px solid $gray

    main
      center($maxwidth)
      span(12/12)
      position relative
      display block
      // top $menubar_height
      // bottom 25px
      background-repeat no-repeat
      background-size cover
      z-index 1
      transition background-image 1.5s linear
      margin-top $menubar_height
      padding-top 2em
      padding-bottom 2em

      &.fixed
        fixed()
        top $menubar_height
        bottom 25px
        margin-top 0

      .ledgo-logo
        width 75px
        height 75px
        background-image url('./img/logo_op_transp.png')
        background-repeat no-repeat
        position absolute
        top .5em

        +desktop()
          right .5em
        +tablet()
          right .5em
        +mobile()
          left 50%
          transform translateX(-50%)

      .content
        +desktop()
          span(4/12, offset: 4/12)
        +tablet()
          span(8/12, offset: 2/12)
        +mobile()
          span(10/12, offset: 1/12)
        position static
        height auto
        transform none
        font-size .9em
        background-color $black
        margin-top 2em
        margin-bottom 2em
        border-radius 10px

        .inner
          overflow auto
          height 100%
          padding 0 1em
          margin 1em 0

        h1, h2, h3, h4, h5, h6
          font-weight 400
          margin-top 0

        h1 a
          text-decoration none
          color $white

          &:hover
            text-decoration underline

    footer
      center($maxwidth)
      span(12/12)
      position relative
      margin 0
      background-color $black
      z-index 10

      &.fixed
        fixed()
        bottom 0

      .copy
        font-size .8em
        span(6/12)
        +mobile()
          span(12/12)
          text-align center
          font-size .6em
        line-height 25px

        .inner
          padding 0 1em

      nav
        span(6/12)
        +mobile()
          span(12/12)
          text-align center

        font-size .7em

        ul
          list-style none
          padding 0
          margin 0

          li
            padding 0
            margin 0
            float right
            +mobile()
              float none
              display inline-block

            a
              text-decoration none
              text-transform uppercase
              font-weight bold
              display block
              padding .5em
              border-left 1px solid $gray
              +mobile()
                border-left 0
                border-right 1px solid $gray

              &:hover
                color $white

            &:last-child a
              border-left 0
              +mobile()
                border-right 0

  .wpcf7
    form.wpcf7-form
      margin-bottom 2em

      .wpcf7-validation-errors, .wpcf7-mail-sent-ok
        border 0
        font-weight bold

      .wpcf7-response-output
        margin-left 0
        margin-right 0
        padding-left 0
        padding-right 0

      .wpcf7-not-valid-tip
        font-style italic
        font-size .9em

      input, textarea
        width 95%
        color $black

      input.wpcf7-submit
        // submit button
        background-color $black
        color $white
        line-height 1.1em
        border 1px solid $white
        border-radius 10px
        font-weight bold
        width auto


      select
        font-family $font
        font-weight 300
        font-size 1rem
        width 95%
        height 1.1em
        color $black
